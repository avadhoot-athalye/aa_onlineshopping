<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-2.4.xsd">

	<!-- Executed when webFlow is triggered -->
	<on-start>
		<!-- userhandler is java class available through annotated Userhandler.java 
			class.here we are calling itâ€™s initFlow() method. -->
		<evaluate expression="userHandler.initFlow()" result="flowScope.userBean" />
	</on-start>

	<!-- if not specified the first view state is the starting state -->
	<view-state id="start" view="signup" model="flowScope.userBean">
		<transition on="submit" to="validate" />
	</view-state>

	<action-state id="validate">
		<evaluate expression="userHandler.validateDetails(userBean,messageContext)"></evaluate>
		<transition on="success" to="welcome" />
		<transition on="failure" to="start" />
	</action-state>
	
	<end-state id="welcome" view="welcome" />
	<end-state id="login" view="externalRedirect:contextRelative:login" />
	<end-state id="toException"
		view="externalRedirect:contextRelative:exception" />

	<!-- these events are available in every state -->
	<global-transitions>
		<transition on="home" to="toHome" />
		<transition on="error" to="toException" />
	</global-transitions>
</flow>