
<div class="well">
	<form class="form-horizontal sign-up-form">

		<!-- Change your settings here -->

		<h2 class="text-center header-sign-up">Change Password Here</h2>

		<!-- Old Password here -->
		<div class="form-group">
			<label for="old_password" class="col-sm-5 control-label">Old
				password</label>
			<div class="col-sm-3 input-group">
				<input type="password" id="old_password" name="old_password"
					placeholder="old password" class="form-control" />
			</div>
		</div>

		<!-- New password here -->
		<div class="form-group">
			<label for="new_password" class="col-sm-5 control-label">New
				Password</label>
			<div class="col-sm-3 input-group">
				<input type="password" id="new_password" name="new_password"
					placeholder="new password" class="form-control" />
			</div>
		</div>

		<!-- Re-enter password here -->
		<div class="form-group">
			<label for="re-enter_pwd" class="col-sm-5 control-label">Re-enter
				password</label>
			<div class="col-sm-3 input-group">
				<input type="password" id="re-enter_pwd" name="re-enter_pwd"
					placeholder="re-enter password" class="form-control" />
			</div>
		</div>

		<!-- Submit Button -->

		<div class="form-group">
			<div class="text-center">
				<button type="submit" class="btn btn-primary ">Update Password</button>
			</div>
		</div>


	</form>
</div>
